<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/map">

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Go Freestyle!"
        android:id="@+id/button1"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:onClick="callFirstFeature"
        android:background="#f0ffffff"
        android:translationZ="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:foregroundTint="#ff9c9c" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Plan 'B'"
        android:id="@+id/button2"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:onClick="callSecondFeature"
        android:background="#f0ffffff"
        android:translationZ="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:foregroundTint="#ff9c9c" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Group Trip"
        android:id="@+id/button3"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:onClick="callThirdFeature"
        android:background="#f0ffffff"
        android:translationZ="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:foregroundTint="#ff9c9c" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Travel Diary"
        android:id="@+id/button4"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:onClick="callFourthFeature"
        android:background="#f0ffffff"
        android:translationZ="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:foregroundTint="#ff9c9c" />

</LinearLayout>

